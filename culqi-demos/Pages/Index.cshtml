@page
@model IndexModel
@{
	ViewData["Title"] = "Home page";
}

<div class="w-full m-auto">
	<div class="max-w-7xl mt-10 mx-auto w-full flex flex-col sm:flex-row flex-grow overflow-hidden">
		@Html.Partial("_ViewSideBar")
		<div class="w-full p-6 px-6 grid grid-cols-1 gap-4 place-content-center place-items-center">
			<h1 class="my-6 text-xl font-bold text-center">.NET CORE DEMO</h1>
			<h2 class="text-xl font-bold text-purple-800">
				CULQI - CUSTOM CHECKOUT
			</h2>
			@Html.Partial("_ViewOnlyCharge")
